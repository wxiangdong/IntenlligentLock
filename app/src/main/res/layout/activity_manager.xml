<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:background="@color/set_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@color/color_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="管理员设置 ：" />

            <Button
                android:id="@+id/manager_info"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="管理员" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@color/color_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="用户设置 ：" />

            <Button
                android:id="@+id/goTo_user"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:text="用户" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@color/color_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20dp"
                android:text="密码设置 ：" />

            <Button
                android:visibility="gone"
                android:id="@+id/revision_manager_ps"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="管理员密码设置/修改" />

            <Button
                android:id="@+id/revision_unlock_ps"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="开门密码设置/修改"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@color/color_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="获取电量 ：" />

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/power_text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:text="电量"
                    android:background="@null"
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/get_power"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="获取电量" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@color/color_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:text="获取时间 ：" />

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/time_text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:text="时间"
                    android:background="@null"
                    android:clickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/get_time"
                    android:textSize="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="获取时间" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:background="@color/color_normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="20dp"
                android:text="系统设置 ：" />

            <Button
                android:id="@+id/set_time"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="系统时间同步" />

            <Button
                android:id="@+id/restore_factory"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="恢复出厂设置"
                android:layout_marginBottom="5dp"/>

            <RelativeLayout
                android:id="@+id/double_rerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:id="@+id/shuangchong_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="双重验证" />

                <Switch
                    android:id="@+id/switch_shuangchong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/shuangchong_tv" />
            </RelativeLayout>

            <View
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:id="@+id/normally_open_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:id="@+id/changkai_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="常开模式" />

                <Switch
                    android:id="@+id/switch_changkai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_toRightOf="@+id/changkai_tv" />
            </RelativeLayout>

            <View
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>